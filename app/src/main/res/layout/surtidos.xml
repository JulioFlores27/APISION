<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools ="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_column="2"
    >

    <TextView
        android:id="@+id/ubicacion_surtido_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="1-1-1"
        android:textSize="15dp"
        android:textAlignment="center"
        android:padding="6dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/descripcion_producto_surtido_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Polyner 75 blanco"
        android:textSize="15dp"
        android:padding="6dp"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <TextView
        android:id="@+id/descripcion_envase_surtido_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bote 4"
        android:textSize="15dp"
        android:padding="6dp"

        />

    <TextView
        android:id="@+id/lote_surtido_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="62554"
        android:textSize="15dp"
        android:padding="6dp"

        />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/cantidad_contada_surtido_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="10"
        android:textSize="15dp"
        android:textAlignment="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="/"
        android:textSize="15dp"
        android:textAlignment="center"


        />

    <TextView
        android:id="@+id/cantidad_surtido_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="10"
        android:textSize="15dp"

        android:paddingTop="6dp"
        android:paddingBottom="6dp"

        />


</LinearLayout>