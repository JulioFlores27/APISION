<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalidasFragment"
    android:id="@+id/swiperefrescar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:text="Número de salida:"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/conprod2"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:layout_gravity="left"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:inputType="numberDecimal" tools:targetApi="o" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Buscar MP/Producto:"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/matpri2"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:layout_gravity="left"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:inputType="textFilter|textCapCharacters"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_buscar_salidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
            <ListView
                android:id="@+id/listasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

